<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_200"
    android:orientation="vertical"
    tools:context=".activities.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/back_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00626262"
            android:fontFamily="@font/rosarivo"
            android:padding="0dp"
            android:paddingRight="40dp"
            android:text="@string/button_chat_list"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            app:icon="@drawable/baseline_arrow_back_ios_new_24"
            app:iconSize="40dp"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
