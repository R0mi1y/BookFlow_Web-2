<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_200"
    tools:context=".activities.MapsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/menu_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#EDEDED"
                android:textColorLink="#FFFFFF"
                app:icon="@drawable/baseline_arrow_back_ios_new_24"
                app:iconGravity="start"
                app:iconSize="35dp"
                app:iconTint="#FFFFFF"
                app:rippleColor="#FFFFFF" />

            <Button
                android:id="@+id/home_btn_1"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00626262"
                android:fontFamily="@font/rosarivo"
                android:gravity="center_vertical|end"
                android:padding="0dp"
                android:text="Scanner"
                android:textColor="@color/colorBlanchedalmond_100_Opaco"
                android:textColorHint="@color/colorBlanchedalmond_100_Opaco"
                android:textSize="42sp" />

            <Space
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="550dp"

            tools:context=".activities.MapsActivity" />

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="84dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <Space
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/home_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00626262"
                android:fontFamily="@font/rosarivo"
                android:gravity="center_vertical|end"
                android:padding="0dp"
                android:text="Tentar Novamente"
                android:textColor="@color/colorBlanchedalmond_100_Opaco"
                android:textColorHint="@color/colorBlanchedalmond_100_Opaco"
                android:textSize="32sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>