<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_200"
    android:orientation="vertical"
    tools:context=".activities.DetailBook">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:contentDescription="botÃ£o menu"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:rippleColor="#FFFFFF"
                    app:tint="#FFFFFF" />


                <Button
                    android:id="@+id/back_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00626262"
                    android:fontFamily="@font/rosarivo_regular"
                    android:gravity="center_vertical|end"
                    android:padding="0dp"
                    android:text="Book"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlanchedalmond_100_Opaco"
                    android:textColorHint="@color/colorBlanchedalmond_100_Opaco"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00626262"
                    android:fontFamily="@font/rosarivo_regular"
                    android:gravity="start|center_vertical"
                    android:padding="0dp"
                    android:text="Flow"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/favorite_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/solarstaroutline"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="-35dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cover"
                    android:layout_width="310dp"
                    android:layout_height="345dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_cover_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                     />

                <ImageView
                    android:id="@+id/availability_img"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-70dp"
                    android:layout_marginEnd="-58dp"
                    app:layout_constraintEnd_toEndOf="@+id/cover"
                    app:layout_constraintTop_toTopOf="@+id/cover"
                    app:srcCompat="@drawable/avalible_plate" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/rosarivo_regular"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/rosarivo_regular"
                android:textColor="@color/colorBlanchedalmond_100"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlanchedalmond_100"
                android:textIsSelectable="true"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/rosarivo_regular"
                android:textColor="@color/colorBlanchedalmond_100"
                android:textSize="17dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/rosarivo_regular"
                    android:text="@string/owner_info"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="38dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>