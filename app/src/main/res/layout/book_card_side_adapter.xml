<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/retangulo_shape_livros"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:background="@drawable/default_cover_bg"
        android:scaleType="centerCrop"
        android:id="@+id/cover"
        app:layout_constraintBottom_toTopOf="@+id/txt_titulo_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Capa do livro" />

    <TextView
        android:id="@+id/title"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:fontFamily="@font/rosarivo"
        android:gravity="center"
        android:text="Titulo"
        android:textColor="@color/white"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/genro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:fontFamily="@font/rosarivo"
        android:gravity="center"
        android:text="Genero"
        android:textColor="@color/colorBlanchedalmond_100"
        android:textSize="17dp" />

</LinearLayout>