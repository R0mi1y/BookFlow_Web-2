<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_200"
    android:orientation="vertical"
    tools:context=".activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_btn1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#FFFFFF"
                    android:textColorHint="#EDEDED"
                    android:textColorLink="#FFFFFF"
                    app:icon="@drawable/baseline_arrow_back_ios_new_24"
                    app:iconGravity="start"
                    app:iconSize="35dp"
                    app:iconTint="#FFFFFF"
                    app:rippleColor="#FFFFFF" />

                <Button
                    android:id="@+id/back_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/rosarivo_regular"
                    android:lineSpacingExtra="-25sp"
                    android:padding="0dp"
                    android:text="Book"
                    android:textColor="@color/colorBlanchedalmond_100_Opaco"
                    android:textSize="42sp"
                    app:iconGravity="start"
                    app:iconSize="35dp"
                    app:iconTint="#FFFFFF" />

                <Button
                    android:id="@+id/back_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00626262"
                    android:fontFamily="@font/rosarivo"
                    android:gravity="start|center_vertical"
                    android:padding="0dp"
                    android:text="Flow"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp" />
            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/cover_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/default_cover_bg" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Nome:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/title"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:autoText="true"
                android:background="@drawable/default_border"
                android:ems="10"
                android:foregroundGravity="center"
                android:hint="Titulo"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:shadowColor="#FFFFFF"
                android:text="Nome"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#A3A3A3"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Email:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/author"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:autoText="true"
                android:background="@drawable/default_border"
                android:ems="10"
                android:foregroundGravity="center"
                android:hint="Autor"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:shadowColor="#FFFFFF"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#A3A3A3"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Telefone:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/genre"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:autoText="true"
                android:background="@drawable/default_border"
                android:ems="10"
                android:foregroundGravity="center"
                android:hint="Gênero"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:shadowColor="#FFFFFF"
                android:text="Telefone"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#A3A3A3"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Biografia:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/resume"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/default_border"
                android:ems="10"
                android:foregroundGravity="center"
                android:hint="Condições para empréstimos"
                android:inputType="text|textEmailAddress"
                android:padding="10dp"
                android:shadowColor="#FFFFFF"
                android:text="Biografia"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#A3A3A3"
                android:textColorLink="#FFFFFF" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Localização:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/default_border"
                android:gravity="center"
                android:padding="10dp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"
                        android:paddingRight="7dp"
                        android:text="Rua:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"

                        android:text="Rua7"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"
                        android:paddingRight="7dp"
                        android:text="Bairro:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"

                        android:text="Centro"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"

                        android:paddingRight="7dp"
                        android:text="Cidade:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"


                        android:text="Guanambi"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"

                        android:paddingRight="7dp"
                        android:text="Estado:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"


                        android:text="Bahia"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"

                        android:paddingRight="7dp"
                        android:text="Código Postal:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"


                        android:text="46430-000"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rosarivo_regular"
                android:text="Contato:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/default_border"
                android:gravity="center"
                android:padding="10dp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"
                        android:paddingRight="7dp"
                        android:text="Whatsapp:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"

                        android:text="77988537742"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rosarivo_regular"
                        android:paddingRight="7dp"
                        android:text="Email:"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_light"

                        android:text="email@gmail.com"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </TableRow>


            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/loading_gif"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:background="#85000000"
        android:duration="1000"
        android:fromAlpha="0.0"
        android:padding="150dp"
        android:toAlpha="1.0"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        app:srcCompat="@drawable/book" />

</LinearLayout>