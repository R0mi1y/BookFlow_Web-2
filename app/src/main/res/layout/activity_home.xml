<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_200"
    android:fitsSystemWindows="true"
    tools:context=".activities.HomeActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="-62dp"
                android:elevation="4dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00626262"
                android:fontFamily="@font/rosarivo_regular"
                android:gravity="center_vertical|end"
                android:padding="0dp"
                android:text="Book"
                android:textAllCaps="false"
                android:textColor="@color/colorBlanchedalmond_100_Opaco"
                android:textColorHint="@color/colorBlanchedalmond_100_Opaco"
                android:textSize="42sp" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00626262"
                android:fontFamily="@font/rosarivo_regular"
                android:gravity="start|center_vertical"
                android:padding="0dp"
                android:text="Flow"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="42sp" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="botão de pesquisa"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_search_24"
                app:rippleColor="#FFFFFF"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Conteúdo da Página Home -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".activities.HomeActivity">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:autoStart="true"
                    android:flipInterval="3700"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:outAnimation="@android:anim/slide_out_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_book">

                    <!-- Primeiro Item -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fiction_session"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_view_ficcao_cientifica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retangulo_ficcao_cientifica"
                            app:layout_constraintDimensionRatio="H,16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/_colecao_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-9dp"
                            android:text="@string/_colecao_string"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/ciencia_ficcao"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintHorizontal_bias="0.139"
                            app:layout_constraintStart_toStartOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintTop_toTopOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/ciencia_ficcao"
                            android:layout_width="179dp"
                            android:layout_height="105dp"
                            android:fontFamily="@font/kodchasan_semibold"
                            android:text="@string/ciencia_ficciao_string"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintHorizontal_bias="0.123"
                            app:layout_constraintStart_toStartOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintTop_toTopOf="@+id/img_view_ficcao_cientifica"
                            app:layout_constraintVertical_bias="1.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Segundo Item -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/crime_session"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_view_crime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retangulo_crime"
                            app:layout_constraintDimensionRatio="H,16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/_colecao_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-9dp"
                            android:text="@string/_colecao_string"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/crime_ficcao"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_crime"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="@+id/img_view_crime"
                            app:layout_constraintTop_toTopOf="@+id/img_view_crime"
                            app:layout_constraintVertical_bias="0.79" />

                        <TextView
                            android:id="@+id/crime_ficcao"
                            android:layout_width="186dp"
                            android:layout_height="56dp"
                            android:fontFamily="@font/kameron"
                            android:letterSpacing="0.07"
                            android:text="@string/crime_string"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/img_view_crime"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_crime"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintStart_toStartOf="@+id/img_view_crime"
                            app:layout_constraintTop_toTopOf="@+id/img_view_crime"
                            app:layout_constraintVertical_bias="0.6" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Terceiro Item -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/adventure_session"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_view_aventura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retangulo_aventura"
                            app:layout_constraintDimensionRatio="H,16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/_colecao_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-9dp"
                            android:text="@string/_colecao_string"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/aventura_ficcao"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_aventura"
                            app:layout_constraintHorizontal_bias="0.752"
                            app:layout_constraintStart_toStartOf="@+id/img_view_aventura"
                            app:layout_constraintTop_toTopOf="@+id/img_view_aventura"
                            app:layout_constraintVertical_bias="0.959" />

                        <TextView
                            android:id="@+id/aventura_ficcao"
                            android:layout_width="156dp"
                            android:layout_height="43dp"
                            android:fontFamily="@font/miniver"
                            android:letterSpacing="0.07"
                            android:text="@string/aventura_string"
                            android:textColor="@color/white"
                            android:textSize="33sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/img_view_aventura"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_aventura"
                            app:layout_constraintHorizontal_bias="0.934"
                            app:layout_constraintStart_toStartOf="@+id/img_view_aventura"
                            app:layout_constraintTop_toTopOf="@+id/img_view_aventura"
                            app:layout_constraintVertical_bias="0.551" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Quarto Item -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/bio_session"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_view_bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retangulo_bio"
                            app:layout_constraintDimensionRatio="H,16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/_colecao_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-9dp"
                            android:text="@string/_colecao_string"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/bio_ficcao"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_bio"
                            app:layout_constraintHorizontal_bias="0.701"
                            app:layout_constraintStart_toStartOf="@+id/img_view_bio"
                            app:layout_constraintTop_toTopOf="@+id/img_view_bio"
                            app:layout_constraintVertical_bias="0.883" />

                        <TextView
                            android:id="@+id/bio_ficcao"
                            android:layout_width="156dp"
                            android:layout_height="43dp"
                            android:fontFamily="@font/karantina"
                            android:letterSpacing="0.07"
                            android:text="@string/bio_string"
                            android:textColor="@color/white"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/img_view_bio"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_bio"
                            app:layout_constraintHorizontal_bias="0.862"
                            app:layout_constraintStart_toStartOf="@+id/img_view_bio"
                            app:layout_constraintTop_toTopOf="@+id/img_view_bio"
                            app:layout_constraintVertical_bias="0.813" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Sexto Item -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/infantil_session"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_view_infantil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/retangulo_infantil"
                            app:layout_constraintDimensionRatio="H,16:9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/_colecao_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-9dp"
                            android:text="@string/_colecao_string"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@+id/infantil_ficcao"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_infantil"
                            app:layout_constraintHorizontal_bias="0.211"
                            app:layout_constraintStart_toStartOf="@+id/img_view_infantil"
                            app:layout_constraintTop_toTopOf="@+id/img_view_infantil"
                            app:layout_constraintVertical_bias="0.756" />

                        <TextView
                            android:id="@+id/infantil_ficcao"
                            android:layout_width="123dp"
                            android:layout_height="32dp"
                            android:fontFamily="@font/jejuhallasan"
                            android:letterSpacing="0.07"
                            android:text="@string/infantil_string"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/img_view_infantil"
                            app:layout_constraintEnd_toEndOf="@+id/img_view_infantil"
                            app:layout_constraintHorizontal_bias="0.145"
                            app:layout_constraintStart_toStartOf="@+id/img_view_infantil"
                            app:layout_constraintTop_toTopOf="@+id/img_view_infantil"
                            app:layout_constraintVertical_bias="0.398" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </ViewFlipper>

                <TextView
                    android:id="@+id/txt_mi_biblioteca2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/rosarivo_regular"
                    android:paddingLeft="30dp"
                    android:text="Minha biblioteca"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_flipper"
                    app:layout_constraintVertical_bias="0.413" />

                <LinearLayout
                    android:id="@+id/op_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/register_book_btn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/retangulo_shape_sessao"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt_cadastrar_livros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/rosarivo_regular"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Cadastrar\nLivros"
                            android:textColor="@color/colorBlanchedalmond_100"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/books_vetor" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/list_books_btn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/retangulo_shape_sessao"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/rosarivo_regular"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Meus\nLivros"
                            android:textColor="@color/colorBlanchedalmond_100"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/book_aberto" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/maps_btn"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/retangulo_shape_sessao"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center|center_vertical"
                            android:fontFamily="@font/rosarivo_regular"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Mapa de\nLivros"
                            android:textColor="@color/colorBlanchedalmond_100"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/books_vetor" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_mi_biblioteca_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/rosarivo_regular"
                    android:paddingLeft="30dp"
                    android:text="Todos"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_flipper"
                    app:layout_constraintVertical_bias="0.413" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_side_cards_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:id="@+id/txt_mi_biblioteca_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/rosarivo_regular"
                    android:paddingLeft="30dp"
                    android:text="Pendentes"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_flipper"
                    app:layout_constraintVertical_bias="0.413" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_side_cards_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:id="@+id/txt_mi_biblioteca_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/rosarivo_regular"
                    android:paddingLeft="30dp"
                    android:text="Favoritos"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_flipper"
                    app:layout_constraintVertical_bias="0.413" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_side_cards_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!-- Menu Lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:background="@color/menu_lateral_color"
        app:itemIconTint="@color/colorBlanchedalmond_100"
        app:itemTextColor="@color/colorBlanchedalmond_100"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>